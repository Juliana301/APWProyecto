@{
    Layout = "~/Views/Shared/_LayoutNews.cshtml";
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="~/css/views/dashboard.css" />
}

<!-- Tabs -->
<div class="flex gap-6 border-b border-surface-200 dark:border-surface-700 mb-6">
    <button onclick="switchTab('feed')" id="tab-feed" class="tab-btn pb-3 text-sm font-medium tab-active transition-colors">Feed</button>
    <button onclick="switchTab('saved')" id="tab-saved" class="tab-btn pb-3 text-sm font-medium text-surface-500 hover:text-surface-700 dark:hover:text-surface-300 transition-colors">Guardados</button>
    <button onclick="switchTab('upload')" id="tab-upload" class="tab-btn pb-3 text-sm font-medium text-surface-500 hover:text-surface-700 dark:hover:text-surface-300 transition-colors">Subir JSON</button>
</div>

<!-- ===== TAB: FEED ===== -->
<div id="panel-feed" class="tab-panel">
    <!-- Search -->
    <div class="relative mb-6">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <i data-lucide="search" class="w-4 h-4 text-surface-400"></i>
        </div>
        <input type="text" id="search-input" placeholder="Buscar noticias..." oninput="filterCards()"
               class="w-full pl-10 pr-4 py-2.5 text-sm rounded-xl border border-surface-200 dark:border-surface-600 bg-white dark:bg-surface-800 placeholder-surface-400 focus:outline-none focus:ring-2 focus:ring-brand-500 transition-all" />
    </div>
    <!-- Cards grid -->
    <div id="feed-grid" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5">
    </div>
</div>

<!-- ===== TAB: SAVED ===== -->
<div id="panel-saved" class="tab-panel hidden">
    <div id="saved-grid" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5">
    </div>
    <div id="saved-empty" class="flex flex-col items-center justify-center py-20 text-center">
        <div class="w-16 h-16 rounded-2xl bg-surface-100 dark:bg-surface-800 flex items-center justify-center mb-4">
            <i data-lucide="bookmark" class="w-8 h-8 text-surface-300 dark:text-surface-600"></i>
        </div>
        <h3 class="text-lg font-semibold text-surface-500 dark:text-surface-400 mb-1">No hay items guardados</h3>
        <p class="text-sm text-surface-400 dark:text-surface-500 max-w-sm">Ve al Feed y guarda las noticias que te interesen. Apareceran aqui para acceso rapido.</p>
    </div>
</div>

<!-- ===== TAB: UPLOAD JSON ===== -->
<div id="panel-upload" class="tab-panel hidden">
    <div class="max-w-2xl mx-auto">
        <div id="drop-zone" onclick="document.getElementById('file-input').click()"
             class="border-2 border-dashed border-surface-300 dark:border-surface-600 rounded-2xl p-12 flex flex-col items-center justify-center text-center cursor-pointer hover:border-brand-400 hover:bg-brand-50/30 dark:hover:bg-brand-900/10 transition-colors">
            <div class="w-16 h-16 rounded-2xl bg-surface-100 dark:bg-surface-800 flex items-center justify-center mb-4">
                <i data-lucide="upload-cloud" class="w-8 h-8 text-surface-400"></i>
            </div>
            <p class="text-sm font-medium text-surface-600 dark:text-surface-300 mb-1">Arrastra un archivo JSON aqui o haz clic para seleccionar</p>
            <p class="text-xs text-surface-400">Formato compatible con NewsHub (.json)</p>
            <input type="file" id="file-input" accept=".json" class="hidden" onchange="handleFileSelect(event)" />
        </div>
        <!-- Preview area -->
        <div id="json-preview" class="hidden mt-6">
            <div class="flex items-center justify-between mb-3">
                <h3 class="text-sm font-semibold">Vista Previa del JSON</h3>
                <button onclick="clearPreview()" class="text-xs text-surface-500 hover:text-red-500 transition-colors">Limpiar</button>
            </div>
            <pre id="json-content" class="p-4 rounded-xl bg-surface-900 dark:bg-surface-800 text-green-400 text-xs overflow-auto max-h-72 border border-surface-700"></pre>
            <button class="mt-4 w-full flex items-center justify-center gap-2 px-4 py-3 text-sm font-semibold rounded-xl bg-brand-500 text-white hover:bg-brand-600 shadow-lg shadow-brand-500/25 transition-all">
                <i data-lucide="database" class="w-4 h-4"></i>
                Cargar a la base de datos
            </button>
        </div>
    </div>
</div>