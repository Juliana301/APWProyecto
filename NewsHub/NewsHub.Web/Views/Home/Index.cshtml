@{
    ViewData["Title"] = "Home Page";
}

<section class="max-w-6xl mx-auto px-6 py-24 md:py-32 flex flex-col items-center text-center">
    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-brand-100 dark:bg-brand-900/30 text-brand-700 dark:text-brand-300 text-xs font-medium mb-6">
        <i data-lucide="zap" class="w-3 h-3"></i>
        Agregador Inteligente de Noticias
    </div>
    <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight text-balance leading-tight max-w-3xl">
        Todas tus fuentes de noticias en
        <span class="text-brand-500">un solo lugar</span>
    </h1>
    <p class="mt-6 text-lg md:text-xl text-surface-500 dark:text-surface-400 max-w-2xl text-pretty">
        Agrega APIs, feeds RSS y widgets. Parsea contenido JSON, XML y HTML automaticamente. Guarda, exporta e importa noticias con facilidad.
    </p>
    <div class="mt-10 flex flex-col sm:flex-row gap-4">
        <a asp-controller="Authentication" asp-action="Login" class="inline-flex items-center justify-center gap-2 px-6 py-3 text-base font-semibold rounded-xl bg-brand-500 text-white hover:bg-brand-600 shadow-lg shadow-brand-500/25 transition-all hover:shadow-xl hover:shadow-brand-500/30">
            <i data-lucide="log-in" class="w-5 h-5"></i>
            Iniciar Sesion
        </a>
        <a asp-controller="News" asp-action="Index" class="inline-flex items-center justify-center gap-2 px-6 py-3 text-base font-semibold rounded-xl bg-white dark:bg-surface-800 text-surface-700 dark:text-surface-200 border border-surface-200 dark:border-surface-700 hover:bg-surface-50 dark:hover:bg-surface-700 transition-colors">
            <i data-lucide="compass" class="w-5 h-5"></i>
            Explorar
        </a>
    </div>
</section>

<!-- Features -->
<section class="max-w-6xl mx-auto px-6 pb-24">
    <div class="grid md:grid-cols-3 gap-6">
        <!-- Feature 1 -->
        <div class="group p-6 rounded-2xl bg-white dark:bg-surface-800 border border-surface-200 dark:border-surface-700 shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 rounded-xl bg-brand-100 dark:bg-brand-900/30 flex items-center justify-center mb-4">
                <i data-lucide="globe" class="w-6 h-6 text-brand-600 dark:text-brand-400"></i>
            </div>
            <h3 class="text-lg font-semibold mb-2">Multi-Fuentes</h3>
            <p class="text-sm text-surface-500 dark:text-surface-400 leading-relaxed">
                Agrega cualquier API, feed RSS o widget. Soporta JSON, XML y HTML con parseo automatico e inteligente.
            </p>
        </div>
        <!-- Feature 2 -->
        <div class="group p-6 rounded-2xl bg-white dark:bg-surface-800 border border-surface-200 dark:border-surface-700 shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 rounded-xl bg-brand-100 dark:bg-brand-900/30 flex items-center justify-center mb-4">
                <i data-lucide="download" class="w-6 h-6 text-brand-600 dark:text-brand-400"></i>
            </div>
            <h3 class="text-lg font-semibold mb-2">Guardar & Exportar</h3>
            <p class="text-sm text-surface-500 dark:text-surface-400 leading-relaxed">
                Guarda items en la base de datos, descargalos en JSON e importalos en cualquier otra instancia compatible.
            </p>
        </div>
        <!-- Feature 3 -->
        <div class="group p-6 rounded-2xl bg-white dark:bg-surface-800 border border-surface-200 dark:border-surface-700 shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 rounded-xl bg-brand-100 dark:bg-brand-900/30 flex items-center justify-center mb-4">
                <i data-lucide="shield-check" class="w-6 h-6 text-brand-600 dark:text-brand-400"></i>
            </div>
            <h3 class="text-lg font-semibold mb-2">Acceso por Roles</h3>
            <p class="text-sm text-surface-500 dark:text-surface-400 leading-relaxed">
                Sistema de login con roles de administrador y usuario. Solo los autorizados pueden guardar y configurar fuentes.
            </p>
        </div>
    </div>
</section>

<!-- How it works -->
<section class="bg-white dark:bg-surface-800 border-y border-surface-200 dark:border-surface-700">
    <div class="max-w-6xl mx-auto px-6 py-20">
        <h2 class="text-2xl md:text-3xl font-bold text-center mb-12 text-balance">Como Funciona</h2>
        <div class="grid md:grid-cols-4 gap-8">
            <div class="flex flex-col items-center text-center">
                <div class="w-14 h-14 rounded-full bg-brand-500 text-white flex items-center justify-center text-xl font-bold mb-4">1</div>
                <h4 class="font-semibold mb-1">Agrega Fuentes</h4>
                <p class="text-sm text-surface-500 dark:text-surface-400">Configura URLs de APIs, feeds o widgets</p>
            </div>
            <div class="flex flex-col items-center text-center">
                <div class="w-14 h-14 rounded-full bg-brand-500 text-white flex items-center justify-center text-xl font-bold mb-4">2</div>
                <h4 class="font-semibold mb-1">Parseo Automatico</h4>
                <p class="text-sm text-surface-500 dark:text-surface-400">JSON, XML y HTML se procesan al instante</p>
            </div>
            <div class="flex flex-col items-center text-center">
                <div class="w-14 h-14 rounded-full bg-brand-500 text-white flex items-center justify-center text-xl font-bold mb-4">3</div>
                <h4 class="font-semibold mb-1">Explora y Guarda</h4>
                <p class="text-sm text-surface-500 dark:text-surface-400">Navega las noticias y guarda tus favoritos</p>
            </div>
            <div class="flex flex-col items-center text-center">
                <div class="w-14 h-14 rounded-full bg-brand-500 text-white flex items-center justify-center text-xl font-bold mb-4">4</div>
                <h4 class="font-semibold mb-1">Exporta e Importa</h4>
                <p class="text-sm text-surface-500 dark:text-surface-400">Descarga y comparte items entre aplicaciones</p>
            </div>
        </div>
    </div>
</section>