<!DOCTYPE html>
<html lang="en" class="">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsHub.Web</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>

    <script>
        tailwind.config = {
          darkMode: 'class',
          theme: {
            extend: {
              colors: {
                brand: { 50:'#fff7ed',100:'#ffedd5',200:'#fed7aa',300:'#fdba74',400:'#fb923c',500:'#f97316',600:'#ea580c',700:'#c2410c',800:'#9a3412',900:'#7c2d12' },
                surface: { 50:'#f8fafc',100:'#f1f5f9',200:'#e2e8f0',300:'#cbd5e1',400:'#94a3b8',500:'#64748b',600:'#475569',700:'#334155',800:'#1e293b',900:'#0f172a',950:'#020617' }
              }
            }
          }
        }
    </script>

    <link rel="stylesheet" href="~/css/output.css"/>

    @RenderSection("Styles", required: false)
</head>
<body class="bg-surface-50 dark:bg-surface-950 text-surface-900 dark:text-surface-100 min-h-screen">

    <!-- Mobile overlay -->
    <div id="sidebar-overlay" onclick="toggleSidebar()" class="fixed inset-0 bg-black/40 z-40 hidden lg:hidden"></div>

    <div class="flex min-h-screen">

        <!-- ========== SIDEBAR ========== -->
        <aside id="sidebar" class="sidebar-transition fixed lg:sticky top-0 left-0 z-50 h-screen w-72 bg-white dark:bg-surface-900 border-r border-surface-200 dark:border-surface-700 flex flex-col -translate-x-full lg:translate-x-0">
            <!-- Logo -->
            <div class="h-16 px-5 flex items-center gap-2 border-b border-surface-200 dark:border-surface-700 shrink-0">
                <div class="w-8 h-8 rounded-lg bg-brand-500 flex items-center justify-center">
                    <i data-lucide="rss" class="w-4 h-4 text-white"></i>
                </div>
                <span class="text-lg font-bold tracking-tight">NewsHub</span>
                <button onclick="toggleSidebar()" class="lg:hidden ml-auto p-1 rounded-lg hover:bg-surface-100 dark:hover:bg-surface-800">
                    <i data-lucide="x" class="w-5 h-5"></i>
                </button>
            </div>

            <!-- Nav -->
            <nav class="flex-1 px-3 py-4 space-y-1 overflow-y-auto">
                <button onclick="switchTab('feed')" id="nav-feed" class="nav-item w-full flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-xl bg-brand-50 dark:bg-brand-900/20 text-brand-600 dark:text-brand-400 transition-colors">
                    <i data-lucide="layout-grid" class="w-4 h-4"></i>
                    Feed
                </button>
                <button onclick="switchTab('saved')" id="nav-saved" class="nav-item w-full flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-xl text-surface-600 dark:text-surface-400 hover:bg-surface-100 dark:hover:bg-surface-800 transition-colors">
                    <i data-lucide="bookmark" class="w-4 h-4"></i>
                    Guardados
                </button>
                <button onclick="switchTab('upload')" id="nav-upload" class="nav-item w-full flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-xl text-surface-600 dark:text-surface-400 hover:bg-surface-100 dark:hover:bg-surface-800 transition-colors">
                    <i data-lucide="upload" class="w-4 h-4"></i>
                    Subir JSON
                </button>
                <a href="settings.html" class="w-full flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-xl text-surface-600 dark:text-surface-400 hover:bg-surface-100 dark:hover:bg-surface-800 transition-colors">
                    <i data-lucide="settings" class="w-4 h-4"></i>
                    Configuracion
                </a>

                <!-- Trending Topics (Surprise Element) -->
                <div class="mt-6 px-3">
                    <h4 class="text-xs font-semibold uppercase tracking-wider text-surface-400 dark:text-surface-500 mb-3">Tendencias</h4>
                    <div class="flex flex-wrap gap-2">
                        <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-brand-100 dark:bg-brand-900/30 text-brand-700 dark:text-brand-300">Inteligencia Artificial</span>
                        <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300">Ciberseguridad</span>
                        <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300">Cloud</span>
                        <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300">DevOps</span>
                        <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-rose-100 dark:bg-rose-900/30 text-rose-700 dark:text-rose-300">Open Source</span>
                        <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-300">Startups</span>
                    </div>
                </div>
            </nav>

            <!-- User section -->
            <div class="px-3 py-4 border-t border-surface-200 dark:border-surface-700 shrink-0">
                <div class="flex items-center gap-3 px-3 py-2">
                    <div class="w-9 h-9 rounded-full bg-brand-100 dark:bg-brand-900/30 flex items-center justify-center">
                        <i data-lucide="user" class="w-4 h-4 text-brand-600 dark:text-brand-400"></i>
                    </div>
                    <div class="flex-1 min-w-0">
                        <p id="sidebar-username" class="text-sm font-medium truncate">Admin</p>
                        <p id="sidebar-role" class="text-xs text-surface-400">Administrador</p>
                    </div>
                    <button onclick="toggleDarkMode()" class="p-2 rounded-lg hover:bg-surface-100 dark:hover:bg-surface-800 transition-colors" aria-label="Alternar modo oscuro">
                        <i data-lucide="sun" class="w-4 h-4 dark:hidden"></i>
                        <i data-lucide="moon" class="w-4 h-4 hidden dark:block"></i>
                    </button>
                </div>
                <a href="index.html" class="mt-2 w-full flex items-center justify-center gap-2 px-3 py-2 text-xs font-medium rounded-xl text-surface-500 hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 dark:hover:text-red-400 transition-colors">
                    <i data-lucide="log-out" class="w-3.5 h-3.5"></i>
                    Cerrar Sesion
                </a>
            </div>
        </aside>

        <!-- ========== MAIN CONTENT ========== -->
        <div class="flex-1 flex flex-col min-w-0">

            <!-- Top bar -->
            <header class="sticky top-0 z-30 h-16 bg-white/80 dark:bg-surface-900/80 backdrop-blur-md border-b border-surface-200 dark:border-surface-700 flex items-center px-6 gap-4 shrink-0">
                <button onclick="toggleSidebar()" class="lg:hidden p-2 rounded-lg hover:bg-surface-100 dark:hover:bg-surface-800" aria-label="Menu">
                    <i data-lucide="menu" class="w-5 h-5"></i>
                </button>
                <h1 class="text-lg font-semibold">Dashboard</h1>
                <div class="flex-1"></div>
                <!-- Stats -->
                <div class="hidden sm:flex items-center gap-4 text-xs text-surface-500">
                    <span class="flex items-center gap-1"><i data-lucide="database" class="w-3.5 h-3.5"></i> 3 fuentes</span>
                    <span class="flex items-center gap-1"><i data-lucide="file-text" class="w-3.5 h-3.5"></i> 9 items</span>
                </div>
            </header>

            <!-- Admin: Manage Sources Bar -->
            <div id="admin-bar" class="bg-white dark:bg-surface-900 border-b border-surface-200 dark:border-surface-700">
                <button onclick="toggleAdminBar()" class="w-full flex items-center justify-between px-6 py-3 text-sm font-medium text-surface-700 dark:text-surface-300 hover:bg-surface-50 dark:hover:bg-surface-800/50 transition-colors">
                    <span class="flex items-center gap-2">
                        <i data-lucide="shield" class="w-4 h-4 text-brand-500"></i>
                        Gestionar Fuentes (Admin)
                    </span>
                    <i data-lucide="chevron-down" id="admin-chevron" class="w-4 h-4 transition-transform"></i>
                </button>
                <div id="admin-content" class="hidden px-6 pb-5">
                    <!-- Add source form -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-6 gap-3 mb-4">
                        <input type="url" placeholder="URL de la fuente" class="lg:col-span-2 px-3 py-2 text-sm rounded-lg border border-surface-200 dark:border-surface-600 bg-surface-50 dark:bg-surface-800 placeholder-surface-400 focus:outline-none focus:ring-2 focus:ring-brand-500" />
                        <input type="text" placeholder="Nombre" class="px-3 py-2 text-sm rounded-lg border border-surface-200 dark:border-surface-600 bg-surface-50 dark:bg-surface-800 placeholder-surface-400 focus:outline-none focus:ring-2 focus:ring-brand-500" />
                        <input type="text" placeholder="Descripcion" class="px-3 py-2 text-sm rounded-lg border border-surface-200 dark:border-surface-600 bg-surface-50 dark:bg-surface-800 placeholder-surface-400 focus:outline-none focus:ring-2 focus:ring-brand-500" />
                        <select class="px-3 py-2 text-sm rounded-lg border border-surface-200 dark:border-surface-600 bg-surface-50 dark:bg-surface-800 focus:outline-none focus:ring-2 focus:ring-brand-500">
                            <option value="api">API</option>
                            <option value="feed">Feed RSS</option>
                            <option value="widget">Widget</option>
                        </select>
                        <div class="flex items-center gap-3">
                            <label class="flex items-center gap-1.5 text-xs text-surface-500">
                                <input type="checkbox" class="rounded border-surface-300 text-brand-500 focus:ring-brand-500" />
                                Secret
                            </label>
                            <button class="flex-1 px-3 py-2 text-sm font-medium rounded-lg bg-brand-500 text-white hover:bg-brand-600 transition-colors">
                                Agregar
                            </button>
                        </div>
                    </div>
                    <!-- Sources table -->
                    <div class="overflow-x-auto rounded-xl border border-surface-200 dark:border-surface-700">
                        <table class="w-full text-sm">
                            <thead class="bg-surface-50 dark:bg-surface-800 text-surface-500 dark:text-surface-400">
                                <tr>
                                    <th class="px-4 py-2.5 text-left font-medium">Nombre</th>
                                    <th class="px-4 py-2.5 text-left font-medium hidden sm:table-cell">URL</th>
                                    <th class="px-4 py-2.5 text-left font-medium">Tipo</th>
                                    <th class="px-4 py-2.5 text-left font-medium hidden md:table-cell">Secret</th>
                                    <th class="px-4 py-2.5 text-right font-medium">Acciones</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-surface-200 dark:divide-surface-700">
                                <tr class="hover:bg-surface-50 dark:hover:bg-surface-800/50">
                                    <td class="px-4 py-3 font-medium">NewsAPI</td>
                                    <td class="px-4 py-3 text-surface-500 hidden sm:table-cell truncate max-w-[200px]">https://newsapi.org/v2/top-headlines</td>
                                    <td class="px-4 py-3"><span class="px-2 py-0.5 text-xs rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300">API</span></td>
                                    <td class="px-4 py-3 hidden md:table-cell"><i data-lucide="check" class="w-4 h-4 text-green-500"></i></td>
                                    <td class="px-4 py-3 text-right">
                                        <button class="p-1.5 rounded-lg hover:bg-surface-100 dark:hover:bg-surface-700 text-surface-400 hover:text-surface-600"><i data-lucide="pencil" class="w-3.5 h-3.5"></i></button>
                                        <button class="p-1.5 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20 text-surface-400 hover:text-red-600"><i data-lucide="trash-2" class="w-3.5 h-3.5"></i></button>
                                    </td>
                                </tr>
                                <tr class="hover:bg-surface-50 dark:hover:bg-surface-800/50">
                                    <td class="px-4 py-3 font-medium">TechCrunch RSS</td>
                                    <td class="px-4 py-3 text-surface-500 hidden sm:table-cell truncate max-w-[200px]">https://techcrunch.com/feed/</td>
                                    <td class="px-4 py-3"><span class="px-2 py-0.5 text-xs rounded-full bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300">Feed</span></td>
                                    <td class="px-4 py-3 hidden md:table-cell"><i data-lucide="x" class="w-4 h-4 text-surface-300"></i></td>
                                    <td class="px-4 py-3 text-right">
                                        <button class="p-1.5 rounded-lg hover:bg-surface-100 dark:hover:bg-surface-700 text-surface-400 hover:text-surface-600"><i data-lucide="pencil" class="w-3.5 h-3.5"></i></button>
                                        <button class="p-1.5 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20 text-surface-400 hover:text-red-600"><i data-lucide="trash-2" class="w-3.5 h-3.5"></i></button>
                                    </td>
                                </tr>
                                <tr class="hover:bg-surface-50 dark:hover:bg-surface-800/50">
                                    <td class="px-4 py-3 font-medium">HackerNews</td>
                                    <td class="px-4 py-3 text-surface-500 hidden sm:table-cell truncate max-w-[200px]">https://hacker-news.firebaseio.com/v0</td>
                                    <td class="px-4 py-3"><span class="px-2 py-0.5 text-xs rounded-full bg-brand-100 dark:bg-brand-900/30 text-brand-700 dark:text-brand-300">Widget</span></td>
                                    <td class="px-4 py-3 hidden md:table-cell"><i data-lucide="x" class="w-4 h-4 text-surface-300"></i></td>
                                    <td class="px-4 py-3 text-right">
                                        <button class="p-1.5 rounded-lg hover:bg-surface-100 dark:hover:bg-surface-700 text-surface-400 hover:text-surface-600"><i data-lucide="pencil" class="w-3.5 h-3.5"></i></button>
                                        <button class="p-1.5 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20 text-surface-400 hover:text-red-600"><i data-lucide="trash-2" class="w-3.5 h-3.5"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Main content area -->
            <main class="flex-1 p-6">

                @RenderBody()

            </main>
        </div>
    </div>

    <script src="~/js/views/dashboard.js"></script>
</body>
</html>

